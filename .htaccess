# Habilitar RewriteEngine
RewriteEngine On

# Establecer la base correcta (ajusta según tu estructura)
RewriteBase /

# Si el archivo o directorio existe, mostrarlo directamente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todo al index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Protección de archivos sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Evitar listado de directorios
Options -Indexes

# Configurar páginas de error personalizadas (opcional)
ErrorDocument 404 /index.php
ErrorDocument 403 /index.php

# Headers de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Configuración de PHP (si está permitido)
<IfModule mod_php.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
    php_value max_execution_time 300
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>